# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 4

# YAML files (Docker Compose, Kubernetes, etc.)
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# Configuration files
[*.{conf,config,cfg}]
indent_size = 4

# Environment files
[.env*]
insert_final_newline = false

# Docker files
[Dockerfile*]
indent_size = 2

# Template files
[*.tmpl]
indent_size = 2

# Python files (if any)
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript (if any)
[*.{js,ts,jsx,tsx}]
indent_size = 2

# Java files (Spring Boot if any)
[*.java]
indent_size = 4
max_line_length = 120
